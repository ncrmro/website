{
  "name": "ncrmro-static",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.6.3",
  "engines": {
    "node": ">=19"
  },
  "scripts": {
    "dev": "npm run build-migrations && npm run mig && next dev -p ${WEB_PORT:-3000}",
    "build": "next build --webpack",
    "start": "PORT=${WEB_PORT:-3000} node .next/standalone/server.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "mig": "node database/dist/migrations.js --seed && DATABASE_URL=database/sqlite3.db kysely-codegen",
    "e2e": "playwright test",
    "typegen": "DATABASE_URL=database/sqlite3.db kysely-codegen",
    "db": "litecli ${DATABASE_PATH:-database/sqlite3.db}",
    "build-migrations": "tsc --module nodenext src/lib/migrations.ts --outDir database/dist",
    "build-cli": "tsc --module nodenext bin/generate-password.ts --outDir bin/dist",
    "generate-password": "npm run build-cli && node bin/dist/generate-password.js",
    "build-sync-cli": "tsc --module nodenext bin/sync-posts.ts --outDir bin/dist",
    "sync-posts": "npm run build-sync-cli && node bin/dist/sync-posts.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.0",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.4",
    "@types/node": "^18.15.11",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "10.4.14",
    "better-sqlite3": "^12",
    "dotenv": "^17.2.3",
    "kysely": "^0.28.3",
    "luxon": "^3.4.3",
    "next": "^16.0.1",
    "next-mdx-remote": "^5.0.0",
    "next-pwa": "^5.6.0",
    "postcss": "8.4.22",
    "posthog-js": "^1.257.1",
    "posthog-node": "^5.5.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-highlight": "^0.15.0",
    "react-markdown": "^9.0.1",
    "sharp": "^0.32.5",
    "sonner": "^2.0.7",
    "tailwindcss": "3.3.1",
    "typescript": "^5.1.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.4",
    "@types/luxon": "^3.3.2",
    "@types/react-highlight": "^0.12.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.6",
    "kysely-codegen": "^0.10.1",
    "prettier": "^2.4.1"
  },
  "prettier": {
    "proseWrap": "always"
  }
}
