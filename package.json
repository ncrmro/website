{
  "name": "ncrmro-static",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.6.3",
  "engines": {
    "node": ">=19"
  },
  "scripts": {
    "dev": "pnpm build-migrations && pnpm migrations && next dev",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "lint": "next lint",
    "migrations": "node database/dist/migrations.js --seed && DATABASE_URL=database/sqlite3.db kysely-codegen",
    "test": "playwright test",
    "typegen": "DATABASE_URL=database/sqlite3.db kysely-codegen",
    "db": "litecli ${DATABASE_PATH:-database/sqlite3.db}",
    "build-migrations": "tsc --module nodenext src/lib/migrations.ts --outDir database/dist",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.16",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.4",
    "@types/node": "18.15.11",
    "@types/react": "18.0.37",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "10.4.14",
    "better-sqlite3": "^8.4.0",
    "kysely": "^0.26.1",
    "next": "13.4.13",
    "next-mdx-remote": "^4.4.1",
    "postcss": "8.4.22",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-highlight": "^0.15.0",
    "sharp": "^0.32.5",
    "tailwindcss": "3.3.1",
    "typescript": "5.0.4",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@types/better-sqlite3": "^7.6.4",
    "@types/react-highlight": "^0.12.5",
    "kysely-codegen": "^0.10.1",
    "next-sitemap": "^1.3.22",
    "prettier": "^2.4.1"
  },
  "prettier": {
    "proseWrap": "always"
  }
}
